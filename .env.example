# Django Secret Key (REQUIRED)
# This is a critical security setting. Keep it secret and never commit the actual key to version control.
# Generate a new key with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=GENERATE_THIS_SECRET_KEY_AS_EXPLAINED_ABOVE

# TrikuSec Configuration
# Admin UI endpoint (for accessing the web interface)
TRIKUSEC_URL=https://localhost:8000
# Lynis API endpoint (for device enrollment and report uploads)
# Falls back to TRIKUSEC_URL if not set
TRIKUSEC_LYNIS_API_URL=https://localhost:8001
TRIKUSEC_ADMIN_USERNAME=admin
# Caution: change the default password!!
TRIKUSEC_ADMIN_PASSWORD=trikusec

# SSL Configuration
# Enable SSL inside the container (for standalone/development mode)
# Set to False if using a reverse proxy (Nginx/Traefik/Caddy)
DJANGO_SSL_ENABLED=True
DJANGO_SSL_CERTFILE=/app/certs/cert.pem
DJANGO_SSL_KEYFILE=/app/certs/key.pem

# Django Configuration (optional)
# DJANGO_DEBUG - Set to True only for development/debugging. NEVER use True in production!
# Default: False (secure default)
# DJANGO_DEBUG=False
# DJANGO_ALLOWED_HOSTS=* 
# DJANGO_CSRF_TRUSTED_ORIGINS=https://localhost:3000
#
# ----------------------------------------------------------------------------
# Additional Recommended Options (commented defaults)
# These are safe defaults for local development. Review for production.
# ----------------------------------------------------------------------------
#
# Django security settings (review for production)
# DJANGO_SECURE_SSL_REDIRECT=False
# DJANGO_SESSION_COOKIE_SECURE=False
# DJANGO_CSRF_COOKIE_SECURE=False
# DJANGO_SECURE_HSTS_SECONDS=0
# DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
# DJANGO_SECURE_HSTS_PRELOAD=False
# DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
# DJANGO_SECURE_REFERRER_POLICY=same-origin
# DJANGO_SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin
#
# Database configuration
# Use SQLite by default (development)
# DJANGO_DB_ENGINE=sqlite3
# DJANGO_DB_NAME=db.sqlite3
#
# PostgreSQL example (production)
# DJANGO_DB_ENGINE=postgresql
# DJANGO_DB_NAME=trikusec
# DJANGO_DB_USER=trikusec
# DJANGO_DB_PASSWORD=change-me
# DJANGO_DB_HOST=postgres
# DJANGO_DB_PORT=5432
# Or provide a single DATABASE_URL instead of individual settings:
# DATABASE_URL=postgres://trikusec:change-me@postgres:5432/trikusec
